<h1>Advanced Search</h1>

<%= form_for @search, html: {class: "pure-form"} do |s| %>
  <div class="field">
    <%= s.label :keywords %><br />
    <%= s.text_field :keywords %>
  </div>
  <div class="field">
    <%= s.label :brand %><br />
    <%= s.select :brand, options_from_collection_for_select(@brands, 'id', 'brand') %>
  </div>

  <div class ="actions"><%= s.submit "Search", class: "pure-button pure-button-primary" %></div>
<% end %>
<p><%= link_to 'Back', basketballs_path %></p>